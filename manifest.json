  "shortcuts": [
    {
      "name": "Start New Adventure",
      "short_name": "New Story",
      "description": "Begin a new space weather story",
      "url": "/#hero-section",
      "icons": [
        {
          "src": "assets/images/shortcut-story.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Live Space Weather",
      "short_name": "Live Data", 
      "description": "View current space weather conditions",
      "url": "/#dashboard",
      "icons": [
        {
          "src": "assets/images/shortcut-dashboard.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Multiplayer Arena",
      "short_name": "Multiplayer",
      "description": "Play space weather games with friends",
      "url": "/#multiplayer",
      "icons": [
        {
          "src": "assets/images/shortcut-multiplayer.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "AI Space Tutor",
      "short_name": "AI Tutor",
      "description": "Chat with your space weather AI tutor",
      "url": "/#ai-tutor",
      "icons": [
        {
          "src": "assets/images/shortcut-ai.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "prefer_related_applications": false,
  "related_applications": [],
  
  "share_target": {
    "action": "/share",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+solarmonarch",
      "url": "/?story=%s"
    }
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "file_handlers": [
    {
      "action": "/story",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".txt"]
      }
    }
  ]
}